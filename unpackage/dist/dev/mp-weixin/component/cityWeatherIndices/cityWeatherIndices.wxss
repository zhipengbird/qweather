.c-city-weather-indices {
  border-radius: 16px;
  border: 1px solid #F2F4FA;
  padding: 30px 20px 20px;
  background-color: #F7F8F9;
  margin: 3%;
}
.c-city-weather-indices .qweather-title {
  text-align: center;
  font-size: 60rpx;
}
.c-city-weather-indices .city-indices__row {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  flex-wrap: wrap;
}
.c-city-weather-indices .city-indices__row .city-indices__item {
  border-radius: 16px;
  background-color: #fff;
  padding: 17px 16px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.c-city-weather-indices .city-indices__row .city-indices__item .indices {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.c-city-weather-indices .city-indices__row .city-indices__item .indices-title {
  font-size: 16px;
  line-height: 1;
}
.c-city-weather-indices .city-indices__row .city-indices__item .indices-level {
  display: inline-block;
  width: 160rpx;
  padding: 8rpx 0;
  font-size: 28rpx;
  text-align: center;
  white-space: nowrap;
  border-radius: 30rpx;
  color: #000000;
}
.c-city-weather-indices .city-indices__row .city-indices__item .indices-text {
  margin-top: 7px;
  font-size: 15px;
  line-height: 16px;
}
.c-city-weather-indices .city-indices__row .city-indices__item--bg {
  flex: 1 0 50%;
  width: 0;
  margin: 8px;
  display: flex;
  flex-direction: column;
}
